<%- include('partials/logheader') %>
<title>Reset Password | BLOG POST</title>
<div class="home">
 <div class="half">
  <div class="set-box">
   <div class="set">
    <h1 class="mt-4" style="letter-spacing: 5px;">BLOG POST</h1>
    <div class="message mt-4 pr-3 pl-3">
     <% if(error_message!="") { %>
     <div class=" alert alert-danger alert-dismissible">
      <button type="button" class="close" data-dismiss="alert">&times;</button>
      <%= error_message %>
     </div>
     <% } %>
     <% if(error!="") { %>
     <div class=" alert alert-danger alert-dismissible">
      <button type="button" class="close" data-dismiss="alert">&times;</button>
      <%= error %>
     </div>
     <% } %>
     <% if(success_message!="") { %>
     <div class=" alert alert-success alert-dismissible">
      <button type="button" class="close" data-dismiss="alert">&times;</button>
      <%= success_message %>
     </div>
     <% } %>
    </div>
    <% if(link!="") { %>
    <form class="mt-4 mb-4 pr-3 pl-3" action="/token/<%= link %>" method="POST">
     <div class="form-group">
      <input type="password" class="form-control" name="password" placeholder="Password" required>
     </div>
     <button type="submit" class="btn btn-info btn-block">Update Password</button>
    </form>
    <% } %>
   </div>
  </div>
 </div>
 <div class="other-half"></div>
</div>
<%- include('partials/logfooter') %>