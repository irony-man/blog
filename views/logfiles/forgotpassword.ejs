<%- include('partials/logheader') %>
<title>Forgot Password | BLOG POST</title>
<div class="home">
 <div class="half">
  <div class="forgot-box">
   <div class="forgot">
    <h1 class="mt-4" style="letter-spacing: 5px;">BLOG POST</h1>
    <p style="color: #E94335;">To continue enter your <strong>email!</strong></p>
    <div class="message mt-4 pr-3 pl-3">
     <% if(error_message!="") { %>
     <div class=" alert alert-danger alert-dismissible">
      <button type="button" class="close" data-dismiss="alert">&times;</button>
      <%= error_message %>
     </div>
     <% } %>
     <% if(error!="") { %>
     <div class=" alert alert-danger alert-dismissible">
      <button type="button" class="close" data-dismiss="alert">&times;</button>
      <%= error %>
     </div>
     <% } %>
     <% if(success_message!="") { %>
     <div class=" alert alert-success alert-dismissible">
      <button type="button" class="close" data-dismiss="alert">&times;</button>
      <%= success_message %>
     </div>
     <% } %>
    </div>
    <% if(success_message=="") { %>
    <form class="mt-4 pr-3 pl-3" action="/forgotpassword" method="POST">
     <div class="form-group">
      <input type="email" class="form-control" name="email" placeholder="Email" required>
     </div>
     <button type="submit" class="btn btn-info btn-block">Send reset password mail</button>
    </form>
    <% } %>
    <hr style="height:2px; width:95%;">
    <div class="register">
     <p><a href="/login">Log In</a> to your account?</p>
    </div>
   </div>
  </div>
 </div>
 <div class="other-half"></div>
</div>
<%- include('partials/logfooter') %>