<%- include('partials/postheader') %>
<title><%= post.title %> by <%= author.username %> | BLOG POST</title>
<div class="post-header">
  <p><span style="font-size: 220%; font-weight: 600;"><%= post.title %> </span><small>(Post modified at:
      <em><%= post.time %></em>)</small> by <a style="color: #17a2b8;"
      href="/profile/<%= post.authorID %>"><strong><%= author.username %> </strong></a></p>
    <% if (author.email==edit || edit=="theblogpostbyshivam@gmail.com") { %>
  <div class="edit">
    <a class="btn btn-outline-info mr-3" href="/compose/<%= post._id%>" data-toggle="tooltip" title="Edit Post"><i
        class="fas fa-edit"></i></a>
    <button class="btn btn-outline-danger" data-toggle="modal" data-target="#deletemodal"><i
        class="fas fa-trash"></i></button>
  </div>
    <% } %>
  <div class="modal fade" id="deletemodal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-dialog-centered" role="document">
      <% if(dark==true) {%>
      <div class="modal-content bg-dark">
        <% } %>
        <% if(dark==false){ %>
        <div class="modal-content">
          <% } %>
          <div class="modal-body">
            <p>Are you sure you want to delete this post?</p>
            <a type="button" href="/delete/<%= post._id%>" class="btn btn-danger">Yes</a>
            <button type="button" class="btn btn-success ml-3" data-dismiss="modal">No</button>
          </div>
        </div>
      </div>
    </div>
  </div>
  <p class="mt-3 content"><%= post.content %></p>
  <div class="like">
    <form action="" method="post">
      <% if (post.like.includes(user)) { %>
      <button type="submit" class="btn btn-outline-danger" data-toggle="tooltip"
        title="Unlike Post"><strong><%= post.like.length %> </strong><i class="fas fa-heart"></i></button>
      <% } else { %>
      <button type="submit" class="btn btn-outline-danger" data-toggle="tooltip"
        title="Like Post"><strong><%= post.like.length %> </strong><i class="far fa-heart"></i></button>
      <% } %>
    </form>
  </div>
  <%- include('partials/postfooter') %>